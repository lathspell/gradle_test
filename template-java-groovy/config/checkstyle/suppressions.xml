<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
        "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
        "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<!-- https://github.com/checkstyle/checkstyle/blob/master/config/suppressions.xml -->
<suppressions>
    <suppress checks="FileLength" files="TokenTypes.java|IndentationCheckTest.java" lines="1" />
    <suppress checks="JavadocStyleCheck" files="(.*Tests*|Mock.*|Test.*)\.java" />
    <suppress id="finalNonUtilClass" files="(.*(Utils|Constants|Facade))\.java" />

    <!-- Suppress all checkstyle for autogenerated packages -->
    <suppress checks="[a-zA-Z0-9]*" files="generated[\\/]"/>

    <!-- they are aggregators of logic, usage a several of classes are ok -->
    <suppress checks="ClassDataAbstractionCoupling" files="(Checker|Main|JavadocDetailNodeParser)\.java"/>
</suppressions>
